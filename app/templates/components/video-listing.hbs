{{#if video}}
  <div class="videodetail">
    <video controls>
      <source src="/assets/videos/720p/{{video.path}}">
      <source src="/assets/videos/480p/{{video.path}}">
      <source src="/assets/videos/max/{{video.path}}">
      <source src="/assets/videos/raw/{{video.path}}">
      Your browser does not support HTML5 videos. Please update.
    </video>

    <div class="box">
      <h2>{{video.name}}</h2>
      {{#if video.description}}
        <p>{{video.description}}</p>
      {{/if}}
      <p>Country: {{video.country}}</p>
      <p>Date: {{moment-format video.date 'DD.MM.YYYY'}}</p>
      <p>Latitude: {{video.latitude}}</p>
      <p>Longitude: {{video.longitude}}</p>
      {{#if video.guests}}
        <p>Camera: {{video.guests}}</p>
      {{/if}}
      {{#if video.camera}}
        <p>Camera: {{video.camera}}</p>
      {{/if}}
    </div>
  </div>
{{/if}}
{{yield}}
