{{page-title (concat this.model.video.name " - " this.model.trip.name)}}

<VideoListing
  @video={{this.model.video}}
  @onEnd={{this.videoEnded}}
  @autoplay={{true}}
>
  {{#if this.model.lastVideo}}
    <p>Last video on trip:
      <LinkTo
        @route="trip.display"
        @models={{array this.model.trip.id this.model.lastVideo.id}}
      >
        {{this.model.lastVideo.name}}</LinkTo>
    </p>
  {{/if}}
  {{#if this.model.nextVideo}}
    <p>Next video on trip:
      <LinkTo
        @route="trip.display"
        @models={{array this.model.trip.id this.model.nextVideo.id}}
      >
        {{this.model.nextVideo.name}}</LinkTo>
    </p>
  {{/if}}
  <p><button type="button" class="stop-trip" {{on "click" this.stopTrip}}>Stop
      at this video.</button></p>
</VideoListing>