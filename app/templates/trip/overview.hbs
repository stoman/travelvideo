<div class="box">
  <div id="overview-map"></div>
  <h2>{{model.name}} {{model.year}}</h2>
  <p class="action">
    <LinkTo @route="trip.start" @model={{model.id}}>Watch all the videos of this trip!</LinkTo>
  </p>
  <p>
    Itinerary:
    <ul>
      {{#each model.videosWithOffsets as |videoWithOffset index|}}
        {{#if videoWithOffset.offset}}
          <li>{{videoWithOffset.offset}} without video</li>
        {{/if}}
        <li><LinkTo @route="trip.display" @models={{array model.id videoWithOffset.video.id}}>{{videoWithOffset.video.name}} ({{videoWithOffset.video.country}})</LinkTo></li>
      {{/each}}
      {{#unless model.finished}}
        <li>and more to come...</li>
      {{/unless}}
    </ul>
  </p>
  <p class="action">
    <LinkTo @route="trip.start" @model={{model.id}}>Watch all the videos of this trip!</LinkTo>
  </p>
</div>
