<div class="box">
  <div id="overview-map"></div>
  <h2>{{model.name}} {{model.year}}</h2>
  <p class="action">
    {{#link-to 'trip.start' model.id}}Watch all the videos of this trip!{{/link-to}}
  </p>
  <p>
    Itinerary:
    <ul>
      {{#each model.videosWithOffsets as |videoWithOffset index|}}
        {{#if videoWithOffset.offset}}
          <li>{{videoWithOffset.offset}} without video</li>
        {{/if}}
        <li>{{#link-to 'trip.display' model.id videoWithOffset.video.id}}{{videoWithOffset.video.name}} ({{videoWithOffset.video.country}}){{/link-to}}</li>
      {{/each}}
      {{#unless model.finished}}
        <li>and more to come...</li>
      {{/unless}}
    </ul>
  </p>
  <p class="action">
    {{#link-to 'trip.start' model.id}}Watch all the videos of this trip!{{/link-to}}
  </p>
</div>
